@using MyWebApplication.AuthClientApp
@using MyWebApplication.Infrastructure
@using MyWebApplication.Entities

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Пользователи";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset='utf-8'>
    <link href="~/css/style.css" rel="stylesheet"/>
    <title>Page Title</title>
</head>
<body>
    <div>
        <a href="~/Home/Index">Назад</a>
        <p></p>
        <a href="~/Admin/Add">Добавить нового пользователя</a>

        <table border="1">
            <tr class="headerTable">
                <td>Id</td>
                <td>Логин</td>
            </tr>

            @foreach (User item in ViewBag.Users)
            {
                <tr style="background: azure">
                    <td>@item.Id</td>
                    <td>@item.UserName</td>
                    <td>
                        <a asp-controller="Admin" asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</body>
</html>