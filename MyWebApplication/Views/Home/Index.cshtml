@using MyWebApplication.Infrastructure
@using MyWebApplication.Entities

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Клиенты";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset='utf-8'>
    <link href="~/css/style.css" rel="stylesheet"/>
    <title>Page Title</title>
</head>
<body>
    <div>
        <a href="~/Home/Add">Добавить</a>

        <table border="1">
            <tr class="headerTable">
                <td>Id</td>
                <td>Фамилия</td>
                <td>Имя</td>
                <td>Отчество</td>
            </tr>

            @foreach (Client item in ViewBag.Clients)
            {
                <tr style="background: azure">
                    <td>
                        <a asp-controller="Home" asp-action="ClientData" asp-route-id="@item.Id">@item.Id</a>
                    </td>
                    <td>@item.Surname</td>
                    <td>@item.Name</td>
                    <td>@item.Patronymic</td>
                    <td>
                        <a asp-controller="Home" asp-action="Edit" asp-route-id="@item.Id">Изменить</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</body>
</html>